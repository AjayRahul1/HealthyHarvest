<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/home_welcome_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7bae37"
        android:fontFamily="@font/tangerine_regular"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="@string/welcome_to_healthy_harvest"
        android:textColor="#35374f"
        android:textSize="38sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/App_Description"
        android:layout_above="@id/fab_next_to_season"
        android:background="@drawable/roundcorners"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        tools:text="@string/App_Description" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_next_to_season"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:contentDescription="@string/next"
        android:src="@drawable/ic_baseline_arrow_forward_24" />
</RelativeLayout>
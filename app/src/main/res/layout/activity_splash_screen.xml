<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/splash_app_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/app_icon_planting"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name" />
    <TextView
        android:id="@+id/splash_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:fontFamily="@font/crimson_text_bold_italic"
        android:textStyle="bold"
        android:layout_below="@id/splash_app_icon"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/splash_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_app_name"
        android:layout_marginTop="10dp"
        android:text="@string/loading"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        />
    <ProgressBar
        android:id="@+id/splash_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/splash_loading_text"
        />
</RelativeLayout>